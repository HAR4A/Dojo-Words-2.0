<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics">

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#FEFAFD"
        android:contentDescription="arrow_back_language_choice"
        android:onClick="go_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ion_arrow_back_outline" />

    <Button
        android:id="@+id/button7"
        android:layout_width="359dp"
        android:layout_height="78dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#5A30F2"
        android:fontFamily="@font/manrope"
        android:paddingLeft="20dp"
        android:text="ВРЕМЯ ПРОВЕДЕННОЕ В \nПРИЛОЖЕНИИ"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="ВАША\nСТАТИСТИКА"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/button9"
        android:layout_width="359dp"
        android:layout_height="78dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#5A30F2"
        android:fontFamily="@font/manrope"
        android:paddingLeft="20dp"
        android:text="ОБЩИЙ ПРОГРЕСС В \nИЗУЧЕНИИ ЯЗЫКА"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button13"
        android:layout_width="359dp"
        android:layout_height="78dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#5A30F2"
        android:fontFamily="@font/manrope"
        android:paddingLeft="20dp"
        android:text="КОЛИЧЕСТВО \nПРОЙДЕННЫХ УРОКОВ"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>